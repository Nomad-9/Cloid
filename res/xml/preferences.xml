<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
 <PreferenceCategory
   android:title="Push Information" >
  <EditTextPreference
     android:key="sname"
     android:summary="Enter the Server Name"
     android:title="Name" />
  <EditTextPreference
     android:key="sip"
     android:summary="Enter the Server IP Address"
     android:title="IP Address" />
  <EditTextPreference
     android:key="sport"
     android:summary="Enter the Server Port"
     android:title="Port" />
  <EditTextPreference
     android:key="sid"
     android:summary="Enter the Sender ID"
     android:title="Sender ID" />
 </PreferenceCategory>

 <PreferenceCategory
   android:title="Push Settings" >
  <CheckBoxPreference
     android:key="enable"
     android:summary="On/Off"
     android:title="Enable Server Push" />
 </PreferenceCategory>
</PreferenceScreen>
