<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
             <TextView android:id="@+id/title"
                     android:text="@string/azure"
                     android:textSize="20sp"
                     style="@style/txtView"/>
    
              <TextView android:id="@+id/txt_name"
                     android:text="@string/txt_acct_name"
                     style="@style/txtView"/>

              <EditText android:id="@+id/acct_name"
                      android:inputType="text"
                      style="@style/txtEdit"
                      android:text="@string/azure_direct_account_name"/>


              <TextView android:id="@+id/txt_key"
                      android:text="@string/txt_access_key"
                      style="@style/txtView"/>

              <EditText android:id="@+id/access_key"
                      android:inputType="textPassword"
                      style="@style/txtEdit"
                      android:text="@string/azure_direct_access_key"/>

              <TextView android:id="@+id/txt_container"
                      android:text="@string/txt_container"
                      style="@style/txtView"/>

              <EditText android:id="@+id/container"
                      android:inputType="text"
                      style="@style/txtEdit"
                      android:text="@string/azure_container"/>

</LinearLayout>