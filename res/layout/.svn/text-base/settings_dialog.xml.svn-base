<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:windowNoTitle="true"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:minWidth="280dip"
    android:layout_height="wrap_content"
    android:layout_margin="15sp"
    android:layout_gravity="bottom|center">
 

    <TableLayout  
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="55sp"
        android:layout_marginRight="55sp">     
    
      <TableRow  android:id="@+id/cloudRow"
                 android:clickable="true"
                 android:onClick="setCloud">

        <ImageView  
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@drawable/push"/>
        
         <TextView     
                 android:text="@string/cloud_prefs"
	             android:layout_width="wrap_content"
		         android:layout_height="wrap_content" 
		         android:id="@+id/label"
		         android:layout_marginLeft="10sp"
		         android:layout_marginRight="10sp"
		         android:paddingTop="10sp"
		         android:paddingBottom="10sp"
		         android:lines="1"
		         android:textSize="19sp"
		         android:textColor="@color/android:black"/>

      </TableRow>
 
     
      <TableRow  android:id="@+id/pushRow"
                 android:clickable="true"
                 android:onClick="setPush">
         
        <ImageView  
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:background="@drawable/push2"/>
        
         <TextView    
                 android:text="@string/push_prefs"
	             android:layout_width="wrap_content"
		         android:layout_height="wrap_content" 
		         android:id="@+id/label1"
		         android:layout_marginLeft="10sp"
		         android:layout_marginRight="10sp"
		         android:paddingTop="10sp"
		         android:paddingBottom="10sp"
		         android:lines="1"
		         android:textSize="19sp"
		         android:textColor="@color/android:black"/>
         
      </TableRow>
      
      
    </TableLayout>
 
</LinearLayout>

